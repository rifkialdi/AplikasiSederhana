<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="#EDEDED">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/idtvPersegi"
                    android:text="Persegi"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <EditText
                    android:id="@+id/idedtSisi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idtvPersegi"
                    android:hint="masukkan sisi"
                    android:inputType="number" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/idedtSisi"
                    android:orientation="horizontal"
                    android:id="@+id/idllpersegi">

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/idbtnKeliling"
                        android:text="Keliling"
                        android:layout_weight="1"/>

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/idbtnLuas"
                        android:text="Luas"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/idtvresultpersegi"
                    tools:text="Result invisible"
                    android:layout_below="@+id/idllpersegi"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/idtvPersegiPanjang"
                    android:text="Persegi Panjang"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <EditText
                    android:id="@+id/idedtLebar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idtvPersegiPanjang"
                    android:hint="Lebar"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/idedtPanjang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idedtLebar"
                    android:hint="Panjang"
                    android:inputType="number" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/idedtPanjang"
                    android:orientation="horizontal"
                    android:id="@+id/idllpersegipanjang">

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/idbtnKelilingPersegiPanjang"
                        android:text="Keliling"
                        android:layout_weight="1"/>

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/idbtnLuasPersegiPanjang"
                        android:text="Luas"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/idtvresultpersegiPanjang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idllpersegipanjang"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="Result invisible" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/idtvJajarGenjang"
                    android:text="Jajar Genjang"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <EditText
                    android:id="@+id/idedtalasjajar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idtvJajarGenjang"
                    android:hint="Alas"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/idedttinggijajar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idedtalasjajar"
                    android:hint="Tinggi"
                    android:inputType="number" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/idedttinggijajar"
                    android:orientation="vertical"
                    android:id="@+id/idlljajargenjang">

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/idbtnLuasJajarGenjang"
                        android:text="Luas"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/idtvresultJajarGenjang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idlljajargenjang"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="Result invisible" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/idtvTrapesium"
                    android:text="Trapesium"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <EditText
                    android:id="@+id/idedtSisiSejajarAtas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idtvTrapesium"
                    android:hint="Sisi Sejajar Atas"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/idedtSisiSejajarBawah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idedtSisiSejajarAtas"
                    android:hint="Sisi Sejajar Bawah"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/idedtTinggiTrapesium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idedtSisiSejajarBawah"
                    android:hint="Tinggi"
                    android:inputType="number" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/idedtTinggiTrapesium"
                    android:orientation="vertical"
                    android:id="@+id/idllTrapesium">

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/idbtnLuasTrapesium"
                        android:text="Luas"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/idtvresultTrapesium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idllTrapesium"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="Result invisible" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>